<Page x:Class="Office.Work.Platform.Plan.PageEditPlan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Office.Work.Platform.Plan"
      xmlns:uc="clr-namespace:Office.Work.Platform.Files"
      mc:Ignorable="d"  d:DesignHeight="450" d:DesignWidth="550"
      Title="计划编辑" Loaded="Page_Loaded">
    <Grid TextElement.FontSize="14" Margin="1,1" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"  MinWidth="300"/>
            <ColumnDefinition Width="*"   x:Name="col_fileInfo" />
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" >
            <StackPanel TextElement.FontSize="14"  HorizontalAlignment="Stretch">
                <GroupBox>
                    <GroupBox.Header>
                        <TextBlock  Text="计划标题" Margin="5"/>
                    </GroupBox.Header>
                    <TextBox BorderBrush="#EAEAEA"  Margin="5"  Padding="3" 
                             IsEnabled="{Binding Path=UserHasGrant}"
                             MaxLength="100"
                             MinHeight="30"
                             TextWrapping="Wrap"
                             VerticalAlignment="Center" 
                             Text="{Binding Path=EntityPlan.Caption}" />
                </GroupBox>
                <GroupBox>
                    <GroupBox.Header>
                        <TextBlock  Text="内容与要求" Margin="5"/>
                    </GroupBox.Header>
                    <TextBox BorderBrush="#EAEAEA" Margin="5"  Padding="3" 
                             IsEnabled="{Binding Path=UserHasGrant}"
                             MaxLength="500"
                             MinHeight="100"
                             AcceptsReturn ="True"
                             TextWrapping="Wrap" 
                             VerticalAlignment="Center" 
                             Text="{Binding Path=EntityPlan.Content}" />
                </GroupBox>
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="计划类型" Margin="5"/>
                    <ComboBox  DockPanel.Dock="Bottom" Width="125" HorizontalAlignment="Left" Margin="10,5"
                               ItemsSource="{Binding Path=WorkContentTypes}"
                               Text="{Binding Path=EntityPlan.PlanType}"
                               VerticalAlignment="Center"  
                               Cursor="Hand"/>
                </DockPanel>
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="责任人员" Margin="5"/>
                    <ComboBox  DockPanel.Dock="Bottom"  Width="125" HorizontalAlignment="Left" Margin="10,5"
                               ItemsSource="{Binding Path=UserGrantSelectList}"
                               DisplayMemberPath="Obj.Id" SelectedValuePath="Obj.Id" 
                               Text="{Binding Path=EntityPlan.ResponsiblePerson}"
                               VerticalAlignment="Center"  
                               Cursor="Hand"/>
                </DockPanel>
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="协助人员" Margin="5"/>
                    <ListBox DockPanel.Dock="Bottom"  ItemsSource="{Binding UserHelperSelectList}"  Margin="5" >
                        <ListBox.Template>
                            <ControlTemplate TargetType="{x:Type ListBox}">
                                <WrapPanel VerticalAlignment="Center"  IsItemsHost="True"/>
                            </ControlTemplate>
                        </ListBox.Template>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelect}" VerticalAlignment="Center" Content="{Binding Obj.Id}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="有权读取" Margin="5"/>
                    <ListBox DockPanel.Dock="Bottom"  ItemsSource="{Binding UserGrantSelectList}"  Margin="5">
                        <ListBox.Template>
                            <ControlTemplate TargetType="{x:Type ListBox}">
                                <WrapPanel VerticalAlignment="Center"  IsItemsHost="True"/>
                            </ControlTemplate>
                        </ListBox.Template>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelect}" VerticalAlignment="Center" Content="{Binding Obj.Id}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
                <DockPanel>
                    <TextBlock DockPanel.Dock="Left" Text="开始日期" Margin="5"/>
                    <DatePicker   DockPanel.Dock="Right"  SelectedDate="{Binding Path=EntityPlan.BeginDate}" Margin="5" Width="200" HorizontalAlignment="Left"/>
                </DockPanel>
                <DockPanel>
                    <TextBlock DockPanel.Dock="Left" Text="结束日期" Margin="5"/>
                    <DatePicker   DockPanel.Dock="Right"  SelectedDate="{Binding Path=EntityPlan.EndDate}" Margin="5" Width="200" HorizontalAlignment="Left"/>
                </DockPanel>
                <DockPanel Visibility="{Binding StrPlanSaved}">
                    <Button DockPanel.Dock="Top" Content="上传文件" Click="BtnUpFile_Click" Width="100"  Margin="5" HorizontalAlignment="Left"/>
                    <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" Visibility="{Binding StrPlanSaved}">
                        <ListBox x:Name="LB_FileList" ItemsSource="{Binding UploadFiles}"  Margin="5" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 SelectionChanged="LB_FileList_SelectionChanged"  >
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid VerticalAlignment="Center" HorizontalAlignment="Left">
                                        <TextBlock  Grid.Column="0" Grid.Row="0" TextWrapping="Wrap" Text="{Binding Name}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </DockPanel>
                <StackPanel Orientation="Horizontal" Margin="20,15" Grid.ColumnSpan="2" HorizontalAlignment="Center"  >
                    <Button Content="保存计划" Margin="5,0,5,0" Height="30" 
                            x:Name="BtnAddPlan"
                            Click="BtnAddPlan_Click"/>
                    <Button Content="继续新增" Margin="5,0,5,0" Height="30" 
                            x:Name="BtnAddContinue"
                            Click="BtnAddContinue_Click"/>
                    <Label Content="{Binding ElementName=leftColumn,Mode=OneWay,Path=ActualWidth}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <GridSplitter Grid.Column="0" BorderThickness="2" BorderBrush="#EAEAEA"/>
        <uc:UC_FileInfo x:Name="UCFileInfo" Grid.Column="1" Margin="10"/>
    </Grid>
</Page>
