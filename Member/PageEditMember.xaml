<Page x:Class="Office.Work.Platform.Member.PageEditMember"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Office.Work.Platform.Member"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="500" Loaded="Page_Loaded"
      Title="PageEditMember">
    <Page.Resources>
        <Style x:Key="TextblockStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="3,5"/>
            <Setter Property="Width" Value="130"/>
        </Style>
        <Style x:Key="TextboxStyle" TargetType="TextBox">
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="180"/>
        </Style>
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="180"/>
        </Style>
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="180"/>
        </Style>
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Margin" Value="2,0,2,5"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="Green"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <TabControl x:Name="Person_TabControl" Margin="2" TabStripPlacement="Right" >
        <TabItem Header="基本信息"  Style="{StaticResource TabItemStyle}" >
            <local:UC_BasicInfo x:Name="UCBasicInfo"/>
        </TabItem>
        <TabItem Header="工作信息"  Style="{StaticResource TabItemStyle}">
            <local:UC_WorkInfo x:Name="UCWorkInfo"/>
        </TabItem>
        <TabItem Header="教育信息" Style="{StaticResource TabItemStyle}">
            
        </TabItem>
        <TabItem Header="个人简历" Style="{StaticResource TabItemStyle}">
            
        </TabItem>
        <TabItem Header="奖惩情况" Style="{StaticResource TabItemStyle}">
          
        </TabItem>
        <TabItem Header="社会关系" Style="{StaticResource TabItemStyle}">
        </TabItem>
        <TabItem Header="月度待遇" Style="{StaticResource TabItemStyle}">
            
        </TabItem>
        <TabItem Header="补充待遇" Style="{StaticResource TabItemStyle}">

        </TabItem>
        <TabItem Header="考勤信息" Style="{StaticResource TabItemStyle}">

        </TabItem>
        <TabItem Header="其他说明" Style="{StaticResource TabItemStyle}">
        </TabItem>
    </TabControl>
</Page>
